{
  "manifest_version": 3,
  "name": "Salesforce Org Grouper",
  "default_locale": "en",
  "version": "1.0",
  "description": "Group your tabs by Salesforce orgs.",
  "permissions": ["tabs", "tabGroups", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}